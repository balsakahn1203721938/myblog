<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-hover">

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <div>
            <div class = "glyphicon glyphicon-star-empty favorite"></div>
          </div>
        </td>
        
        
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <!--<td><%= post.category_id %></td>-->
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post, :class => 'btn btn-default'%></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: "Don't destroy that!" }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
    
  </tbody>

<br>

<%= link_to 'New Post', new_post_path %>
